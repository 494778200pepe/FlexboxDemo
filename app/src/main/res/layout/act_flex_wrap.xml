<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="118px"
        android:layout_marginTop="20px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="原装：6个100，默认flexWrap=nowrap " />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light">

            <TextView
                android:layout_width="100px"
                android:layout_height="50dp"
                android:background="@drawable/btn_common_normal"
                android:text="a\n100px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="50dp"
                android:background="@drawable/btn_common_normal"
                android:text="b\n100px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="50dp"
                android:background="@drawable/btn_common_normal"
                android:text="c\n100px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="50dp"
                android:background="@drawable/btn_common_normal"
                android:text="d\n100px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="50dp"
                android:background="@drawable/btn_common_normal"
                android:text="e\n100px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="50dp"
                android:background="@drawable/btn_common_normal"
                android:text="f\n100px" />
        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正常方向换行\n4个200,flexWrap=wrap" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            app:flexWrap="wrap">

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="a\n200px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="b\n200px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="c\n200px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="d\n200px" />

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正常方向换行\n前面三个不足600px,flexWrap=wrap" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            app:flexWrap="wrap">

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="a\n200px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="b\n200px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="c\n100px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="d\n200px" />

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不换行\nflexWrap=nowrap" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            app:flexWrap="nowrap">

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="a\n200px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="b\n200px" />

            <TextView
                android:layout_width="400px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="c\n400px" />


        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="反方向换行\n前面三个不足600px,flexWrap=wrap_reverse" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            app:flexWrap="wrap_reverse">

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="a\n200px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="b\n200px" />

            <TextView
                android:layout_width="100px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="c\n100px" />

            <TextView
                android:layout_width="200px"
                android:layout_height="35dp"
                android:background="@drawable/btn_common_normal"
                android:text="d\n200px" />

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark" />
    </LinearLayout>
</ScrollView>